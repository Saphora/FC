<UserControl x:Class="FC.Office.Controls.Files.FileUploadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FC.Office.Controls.Files"
             mc:Ignorable="d" Height="762" Width="659">
    <Grid Margin="0,10,27,0" HorizontalAlignment="Right" Width="622" Height="617" VerticalAlignment="Top">
        <StackPanel HorizontalAlignment="Left" Height="270" Margin="310,10,0,0" VerticalAlignment="Top" Width="265" x:Name="DropPane" Background="#FF979090">
            <TextBlock x:Name="TextBlock" Text="Drop files here" TextWrapping="Wrap" Height="165" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
        </StackPanel>
        <TextBox x:Name="log" HorizontalAlignment="Left" Height="307" Margin="10,300,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="565" RenderTransformOrigin="0.317,0.261"/>
        <TreeView x:Name="treeView" HorizontalAlignment="Left" Height="270" Margin="10,10,0,0" VerticalAlignment="Top" Width="295"/>

    </Grid>
</UserControl>
